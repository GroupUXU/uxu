{
  "name": "uxu",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/GroupUXU/uxu"
  },
  "engines": {
    "node": "=18",
    "yarn": "=1.22.*"
  },
  "browserslist": [
    "Chrome >= 83",
    "Firefox >= 90",
    "Safari >= 14",
    "Opera >= 78",
    "Edge >= 92",
    "Samsung >= 13"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "wtrasiedev": "npx turbo run dev --filter=wtrasie",
    "auadev": "npx turbo run dev --filter=aua",
    "auaprod": "npx turbo run start --filter=aua",
    "polskidevbackendprod": "npx turbo run start --filter=polskidevbackend",
    "heroku-postbuild": "if [ $APP_NAME_ENV = 'polskidevbackend' ]; then yarn run polskidevbackendprod; fi"
  },
  "devDependencies": {
    "eslint": "8.48.0",
    "prettier": "3.0.3",
    "tsconfig": "*",
    "turbo": "1.12.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "apps/polskidev/*"
  ]
}
